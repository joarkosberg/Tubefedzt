<div class="col-md-12">
  <div class="col-center">

    <div class="text-center">
      <h2 class="clear-top">Preferences</h2>
    </div>

    <div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, multipart: true) do |f| %>
          <%= devise_error_messages! %>

          <div class="field adjust-field">
            <%= f.label :profile_picture %>
            <%= f.file_field :profile_picture %>
          </div>

          <div class="field adjust-field">
            <%= f.email_field :email, placeholder: 'Email', autofocus: true %>
          </div>

          <div class="field adjust-field">
            <%= f.text_field :first_name, placeholder: "First name" %>
          </div>

          <div class="field adjust-field">
            <%= f.text_field :last_name, placeholder: "Last name" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field adjust-field">
            <%= f.password_field :password, placeholder: 'New password', autocomplete: "off" %>
          </div>

          <div class="field adjust-field">
            <%= f.password_field :password_confirmation, placeholder: 'New password confirmation', autocomplete: "off" %>
          </div>

          <div class="field adjust-field">
            <%= f.password_field :current_password, placeholder: 'Current password', autocomplete: "off" %>
          </div>

          <div class="btn btn-submit btn-lg btn-info">
            <%= f.submit "Update" %>
          </div>
      <% end %>

      <!-- Button-->
      <%= link_to 'Delete my account', registration_path(resource_name),
                  data: { confirm: "Are you sure?" }, method: :delete %>

    </div>
  </div>
</div>
